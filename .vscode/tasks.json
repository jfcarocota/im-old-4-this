{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build",
			"command": "g++",
			"args": [
				"-std=c++17",
				//"-static-libgcc",
				//"-static-libstdc++",
				"-Iinclude",
				"-Isrc/dynamics",
				"src/*.cc",
				"src/game/*.cc",
				"src/collision/*.cpp",
				"src/common/*.cpp",
				"src/dynamics/*.cpp",
				"src/rope/*.cpp",
				"src/GUI/*.cc",
				"-o",
				"bin/Im_old_4_this.exe",
				//"-Llib"
				"lib/*.a",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}